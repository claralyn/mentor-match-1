<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= favicon_link_tag %>
  	<title><%= content_for?(:title) ? yield(:title) : "CodeFellows Mentor Match" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>

    <%= csrf_meta_tags %>
  </head>
  <body>
<!-- Begin Page Header -->
    <header class="row">
      <div class="large-9 small-9 columns">
        <% unless content_for?(:home) %>
          <a href="/">
        <% end %>
          <img src="/assets/codefellows2.png" height="auto" width="75" />
        <% unless content_for?(:home) %>
          </a>
        <% end %>
          <h1> Mentor Match </h1>
      </div>
      <div class="large-3 small-3 columns">
      <nav>
        <% if user_signed_in? %>
          <% dashboard =  if current_user.student
                            students_path
                          elsif current_user.mentor
                            mentors_path
                          elsif current_user.admin
                            admin_users_path
                          end %>
          <%= link_to "Dashboard", dashboard %> |
          <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to image_tag("/assets/admin-large.png", :alt => "admin login", :title => "Login", :id => "login"), new_user_session_path, "data-reveal-id" => "myModal" %>
        <% end %>
      </nav>
    </div>
    </header>
<!-- End Page Header -->

<!-- Begin Page Content -->
  <div class="row" id="wrapper">
    <div class="large-12 small-12">
      <% flash.each do |key, value| %>
        <div class='flash' id='<%= key %>'>
          <%= value %>
        </div>

      <% end %>

      <%= yield %>
    </div>
  </div>

<!-- End Page Content -->

<!-- Begin Page Footer -->
<footer class="row">
  <div class="large-12 small-12 columns">
    <h6 class="subheader">&copy; CodeFellows 2013</h6>
  </div>
</footer>
    <div id="myModal" class="reveal-modal small">
        <%= render "devise/sessions/form" %>
        <a class="close-reveal-modal">&#215;</a>
    </div>
    <%= javascript_include_tag "application" %>
<!-- End Page Footer -->
  </body>
</html>
