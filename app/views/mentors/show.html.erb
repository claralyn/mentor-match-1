<div>
	<%= link_to "Edit", edit_mentor_path(@mentor), class: "button alert small" %>
	<%= link_to "Delete", @mentor,
				:confirm => "Are you sure you want to delete #{@mentor.personal_first_name} #{@mentor.personal_last_name}",
				:method => :delete, class: "button alert small" %>
</div>
<h2><%= @mentor.personal_first_name %> <%= @mentor.personal_last_name %></h2>
	<p><em><%= @mentor.career_job_title %> at
			<%= @mentor.career_company_private  %>
			<%= case @mentor.career_company_type
					when "startup"
						"(Startup)"
					when "largeco"
						"(Larger Company)"
					when "self"
						"(Self Employed)"
					when "none"
						"(No Preference)"
					end %>
	</em></p>
	<p><em>
		<%= @mentor.personal_email %>
	</em></p>
	<p><em>For
					<%= case @mentor.cf_class
						 	when "rails2"
						 		"Ruby on Rails June 2013"
						 	when "rails3"
						 		"Ruby on Rails July/August 2013"
							end %>
	</em></p>
