<div id="mentorsDiv">
  <h2 class="subheader">
    View Mentor Profiles
  </h2>
  <div id="filter">
    <a href="#" id="filterShow">V</a>
    <%= link_to "View All Mentors", {controller: "students", action: "index", sort: "all"}, remote: true, class: "filterMentors filterMentorsSelected" %>
    <div id="filterMentorsCompany">
      <% @companies.each do |company| %>
          <%= link_to "Mentors at #{company}", {controller: "students", action: "index", sort: company }, remote: true, class: "filterMentors" %>
      <% end %>
    </div>
  </div>
  <div id="mentorsLinksDiv">
      <% if @mentors.present? %>
        <ul class="mentorLinks">
          <% @mentors.each do |mentor| %>
            <% @mentor = mentor %>
            <%= render "mentorlink", :locals =>{post: @mentor} %>
          <% end %>
        </ul>
      <% else %>
        <p>
          No mentors available
        </p>
      <% end %>
  </div>
</div>
<div id="showcase">
</div>