<h2>Users that Need Your Approval</h2>
<% if @pending_users.present? %>
	<%= form_tag "/approve", method: "put" do |f| %>
		<table>
			<tr>
				<td>Approve</td>
				<td>Deny</td>
				<td></td>
			</tr>
			<% @pending_users.each do |user| %>
				<tr>
					<td>
						<%= check_box_tag "approve_ids[]",
							user.id,
							checked = false %>
					</td>
					<td>
						<%= check_box_tag "deny_ids[]",
							user.id,
							checked = false %>
					</td>
					<td>
						<% case user.role %>
						<% when "mentor" %>
							<%= user.mentor.personal_first_name %>
							<%= user.mentor.personal_last_name %>
						<% when "student" %>
							<%= user.student.personal_first_name %>
							<%= user.student.personal_last_name %>
						<% end %>
						<% if user.email.present? %>
							(<%= user.email %>)
						<% end %>
					</td>
				</tr>
			<% end %>
			<tr>
				<td></td>
				<td colspan="2">
					<%= submit_tag "Submit" %>
				</td>
			</tr>
		</table>
	<% end %>
<% else %>
	<p>
		No current users available.
	</p>
<% end %>